      .proceed_anyway{
        transition: 0.2s linear;
      }

      .proceed_anyway:hover{
        color: #FFF;
background-color: #E51C01;
      }
      
      
    </style>


    <script>
      document.addEventListener('DOMContentLoaded', function() {


          if (!localStorage.getItem('popup_verification')) {
           
          if (window.Shopify && window.Shopify.designMode) {
            
              const shopName = Shopify.shop; 
              const apiUrl = `https://platform-api.autods.com/sales_channels/shopify/check-store/?shop=${shopName}`;
              fetch(apiUrl)
                  .then(response => {
                    
                      if (!response.ok) {
                           setTimeout(function() {
                              document.querySelector('.verify-popup.popup-varify').classList.add('verify-visible');
                              document.querySelector('.verify-popup-overlay').classList.add('verify-visible');
                          }, 4000);
                      } 
                  })
                  .catch(error => {
                      setTimeout(function() {
                          document.querySelector('.verify-popup.popup-varify').classList.add('verify-visible');
                          document.querySelector('.verify-popup-overlay').classList.add('verify-visible');
                      }, 4000);
                  });
          }

          }
            
      });

      document.querySelectorAll(".verify-popup a.btn-black").forEach(item => {
          item.addEventListener("click", function(e){
            e.preventDefault();
            window.open("https://platform.autods.com/register?utm_source=shopify&utm_medium=bys_theme", '_blank')
            this.closest('.verify-popup').classList.remove('verify-visible');
            document.querySelector('.verify-popup-overlay').classList.remove('verify-visible');
        })
      })


       document.querySelectorAll(".verify-popup .close").forEach(item => {
        item.addEventListener("click", function(e){
          e.preventDefault();
          this.closest('.verify-popup').classList.remove('verify-visible');
          document.querySelector('.verify-popup-overlay').classList.remove('verify-visible');
        })
       })
      
       document.querySelector(".verify-popup .cancel").addEventListener("click", function(e){
          e.preventDefault();
           document.querySelector('.popup-varify').classList.remove('verify-visible');
          document.querySelector('.popup-confirmation').classList.add('verify-visible')
      })

       document.querySelector(".verify-popup .proceed_anyway").addEventListener("click", function(e){
          e.preventDefault();
           this.closest('.verify-popup').classList.remove('verify-visible');
          document.querySelector('.verify-popup-overlay').classList.remove('verify-visible');
          localStorage.setItem('popup_verification', 'true');
      })

      

    </script>