      .verify-popup{
            border-radius: 12px;
            background: #FFF;
            box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.20);
            max-width: 430px;
            width: calc(100% - 32px);
            position: fixed;
            top: 120px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 99;
            opacity: 0;
            visibility: hidden;
            transition: 0.2s linear;
      }



       .verify-popup.verify-visible{
        opacity: 1;
        visibility: visible;
      }


      .verify-popup-overlay.verify-visible{
        opacity: 0.7;
        visibility: visible;
      }


